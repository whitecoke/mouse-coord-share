{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "test HTML",
			"type": "process",
			"command": "chrome",
			"windows": {
				"command": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe"
			},
			"args": [ "${workspaceFolder}/test.html" ],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "test Typescript",
			"type": "deno",
			"command": "run",
			"problemMatcher": [
				"$deno"
			],
			"args": [
				"--allow-all",
				"--unstable",
				"test.ts"
			]
		},
		{
			"label": "localhost:8000",
			"type": "process",
			"command": "chrome",
			"windows": {
				"command": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe"
			},
			"args": [ "http://localhost:8000" ],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
	]
}